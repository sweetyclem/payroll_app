<% flash.each do |key, value| %>
  <div class="<%= flash_class(key) %>">
    <%= value %>
  </div>
<% end %>

<h1>Payroll report</h1>

<br><br>
<table class="responstable">
  <tr>
    <th><%= t('en.payroll_item.id') %></th>
    <th><%= t('en.payroll_item.employee_id') %></th>
    <th><%= t('en.payroll_item.pay_period') %></th>
    <th><%= t('en.payroll_item.amount_paid') %></th>
  </tr>
  <% @payroll_report.items.each do |item| %>
    <%= render partial: "payroll_items/payroll_item", locals: { payroll_item: item } %>
  <% end %>
</table>
